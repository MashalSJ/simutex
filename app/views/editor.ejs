<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= unescape(ptitle) %> | <%= unescape(brand.name) %></title>

    <!-- jQuery Libraries -->

    <script type="text/javascript" src="/dist/js/jquery-latest.js"></script>

    <!-- Bootstrap core CSS -->
    <link type="text/css" rel="stylesheet" href="/dist/css/bootstrap.min.css">

    <!-- jQuery UI Layout Styles -->
    <link type="text/css" rel="stylesheet" href="/dist/css/layout-default-styles.css">

    <!-- Custom styles for this template -->
    <link type="text/css" rel="stylesheet" href="/dist/css/editor-styles.css" >

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-truncate" data-toggle="tooltip" data-placement="right" title="<%= brand.name %>" style="cursor: default;"><%= brand.name %></div>
            <div class="list-group list-group-flush" style="height:calc(100% - 57px);">
                <a href="#" class="list-group-item list-group-item-action bg-light">Dashboard</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Shortcuts</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Overview</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Events</a>
                <a href="/profile" class="list-group-item list-group-item-action bg-light">Profile</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Status</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">

                <!-- <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button> -->

            <div class="row" id="navbarSupportedContent">
                <div class="col">
                    <span id="project_title" class="user-select-none" role="button"><%= unescape(ptitle) %></span>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-info ml-auto" data-toggle="modal" data-target="#myModal">Project Settings</button>
                </div>
                <div class="col">
                    <div class="ml-auto" id="user-presence"></div>
                </div>
                <div class="col">
                    <a href="/projects" class="btn btn-info ml-auto" role="button">My Projects</a>
                </div>
            </div>

            <div id="editor-container" class="container-fluid" style="padding:0px; margin:0px; height:calc(100% - 57px);">
                <div class="ui-layout-center border-width-right no-padding" style="width: 500px;height:500px;" id="editor-parent">
                    <div id="editor-left"></div>
                </div>

                <div id="pdf-viewer-parent" class="ui-layout-east border-width-left no-padding">
                    <iframe id="pdf-viewer" width="100%" height="100%" frameBorder="0" src=""></iframe>
                </div><!-- -->
            </div>
        </div>
        <!-- /#page-content-wrapper -->

            <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <!-- <h4 class="modal-title">Project Settings</h4> -->
            </div>
            <div class="modal-body">
            <%- include("./modal_project_settings.ejs") %>
            </div>
            <div class="modal-footer">
            <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
            </div>
        </div>
        </div>
    </div>

    </div>
    <!-- /#wrapper -->

    <% if ((pdata || pdata=="" ) && pid) { %>
    <!-- Project Data -->
    <script>
        var pid = unescape(`<%= pid %>`);
        var pdata = unescape(`<%= pdata %>`);
        var bname = '<%= brand.name %>';
    </script>
    <% } %>

    <!-- Editor Bundle -->
    <script type="text/javascript" src="/dist/js/editor/editor.bundle.js"></script>

</body>

</html>
